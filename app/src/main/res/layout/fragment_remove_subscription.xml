<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".fragments.RemoveSubscriptionFragment">

    <!-- Left side (1/3 width) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#E8D5D5"
        android:backgroundTint="#C3BDBD"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonRemoveSubscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:elevation="10dp"
            android:text="REMOVE"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconPadding="0dp" />

        <ImageButton
            android:id="@+id/imageButtonBackRemove"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:background="@android:drawable/ic_menu_revert"
            android:backgroundTint="#2B0868" />

    </LinearLayout>

    <!-- Right side (2/3 width) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#E3E1E1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSubscriptionTitleRemove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6750A4"
            android:elevation="7dp"
            android:text="Subscription"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/edtSubscriptionNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter subscription number" />

        <Button
            android:id="@+id/btnShowSubscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show" />

        <ListView
            android:id="@+id/lstSubscriptions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:choiceMode="singleChoice" />

    </LinearLayout>
</LinearLayout>
