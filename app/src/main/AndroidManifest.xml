<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DeliveryManagement"
        tools:targetApi="31">

        <!-- Changed SplashScreenActivity to be the launcher activity -->
        <activity android:name=".activities.IntroActivity"
            android:exported="false" />

        <activity
            android:name=".activities.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Following activities are not intended to be opened by other applications, so they are exported as false -->
        <activity
            android:name=".activities.List"
            android:exported="false" />
        <activity
            android:name=".activities.AddDeliveryDriver"
            android:exported="false" />
        <activity
            android:name=".activities.RemoveSubscription"
            android:exported="false" />
        <activity
            android:name=".activities.AddSubscription"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />
    </application>
</manifest>
